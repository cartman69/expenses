{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vendor</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vendor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ vendor.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ vendor.address }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ vendor.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vendor_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vendor_edit', { 'id': vendor.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
