{% extends 'base.html.twig' %}

{% block body %}
    <h1>Invoice</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ invoice.title }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ invoice.code }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if invoice.date %}{{ invoice.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ invoice.amount }}</td>
            </tr>
            <tr>
                <th>Organization</th>
                <td>{{ invoice.organization }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ invoice.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('invoice_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('invoice_edit', { 'id': invoice.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
