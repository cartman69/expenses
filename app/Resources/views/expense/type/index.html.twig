{% extends 'base.html.twig' %}

{% block body %}
        <h1>Types list</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for type in types %}
                <tr>
                    <td><a href="{{ path('expense_type_show', { 'id': type.id }) }}">{{ type.id }}</a></td>
                    <td>{{ type.code }}</td>
                    <td>{{ type.name }}</td>
                    <td>{{ type.description }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('expense_type_show', { 'id': type.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('expense_type_edit', { 'id': type.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('expense_type_new') }}">Create a new type</a>
            </li>
        </ul>

{% endblock %}
