{% extends 'base.html.twig' %}

{% block body %}
    <h1>Type</h1>

    <table class="table table-condensed table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ type.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ type.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ type.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('expense_type_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('expense_type_edit', { 'id': type.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-default">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
